-extends "base.haml"

-load static
-load student_tags
-load compress

-block head

-block content
	{% if user.id is not None %}

		.page-header
			%h1 Forum - {{ user.username }}

		.container-fluid.boxclasseTitle
			%input{:type => "search", :id => "search", :placeholder => "Chercher..."}
			.center
		    	%table.table.table-hover
		    		%tr{:id => "forum"}
		    			%th 
		    				%center Titre
		          		%th 
		          			%center Auteur
		          		%th
		          			%center Compétence(s)
		          		%th
		          			%center Date

		        	{% if threads %}
		        		-for thread in threads
		        			%tr{:id => "{{thread.id}}", :style => "cursor:pointer;"}
						        %td
						            %p{:style => "color: #f58025;"}>{{thread.title}}
						        %td {{thread.author.username}}
						        %td
						            {% if thread.skills.all %}
							            -for skill in thread.skills.all
							            	{{skill.name}}
							            	%br
							        {% else %}
							            Aucune compétence liée
							        {% endif %}
						        %td {{thread.modified_date}}
		        			
			    	{% else %}
			    		%tr
			    			%td Aucune conversation trouvée
			    			%td
			    			%td
			    			%td

			    	{% endif %}
				%a.btn.btn-primary.btn-lg{:href => "/forum/write/"}>Démarrer une nouvelle discussion
	{% else %}
		Vous n'êtes pas identifié !
	{% endif %}

-block javascript
	:javascript
		$(document).ready(function(){
			$("tr").click(function(){
				if($(this).attr("id")){
					window.location = "/forum/thread/" + $(this).attr("id");
				}
			});
		});

		$(document).ready(function(){
			$("#search").on("keyup", function(){
				var value = $(this).val().toLowerCase();
				$("tr").filter(function(){
					$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
				});
				$("#forum").show();
			});
		});